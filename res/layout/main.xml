			android:layout_marginRight="2dp"
			android:src="@drawable/ic_menu_rewd" />

		<ImageView android:layout_width="wrap_content" android:layout_height="0dp"
			android:id="@+id/iv_main_menu" android:contentDescription="@string/hello"
			android:height="0dp" android:layout_weight="1"
			android:layout_marginRight="2dp"
			android:src="@drawable/icon" />
		
		<ImageView android:layout_width="wrap_content" android:layout_height="0dp"
			android:id="@+id/iv_tb_zoomin" android:contentDescription="@string/hello"
			android:height="0dp" android:layout_weight="1"
			android:layout_marginRight="2dp"
			android:src="@drawable/ic_menu_zoin" />
		<ImageView android:layout_width="wrap_content" android:layout_height="0dp"
			android:id="@+id/iv_tb_zoomou" android:contentDescription="@string/hello"
			android:height="0dp" android:layout_weight="1"
			android:layout_marginRight="2dp"
			android:src="@drawable/ic_menu_zout" />
